<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <ListPreference
            app:defaultValue="false"
            app:key="apiSelection"
            app:title="API selection"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="false"
            app:key="minuteAdjustmentSelection"
            app:title="Adjust minutes"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="API-Settings">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Empty" />

    </PreferenceCategory>

</PreferenceScreen>