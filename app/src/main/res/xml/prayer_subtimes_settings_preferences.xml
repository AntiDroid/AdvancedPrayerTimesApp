<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:id="@+id/subtimeOnePreferenceCategory"
        app:title="Subtime 1">

        <SwitchPreference
            app:defaultValue="false"
            app:key="isSubtimeOneEnabled"
            app:title="Enabled" />
        <ListPreference
            app:key="subtimeOneTimeSelection"
            app:title="Time"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:id="@+id/subtimeTwoPreferenceCategory"
        app:title="Subtime 2">
        <SwitchPreference
            app:defaultValue="false"
            app:key="isSubtimeTwoEnabled"
            app:title="Enabled" />
        <ListPreference
            app:key="subtimeTwoTimeSelection"
            app:title="Time"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:id="@+id/subtimeThreePreferenceCategory"
        app:title="Subtime 3">

        <SwitchPreference
            app:defaultValue="false"
            app:key="isSubtimeThreeEnabled"
            app:title="Enabled" />
        <ListPreference
            app:key="subtimeThreeTimeSelection"
            app:title="Time"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>